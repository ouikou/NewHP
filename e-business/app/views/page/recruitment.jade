                .row
                  .col-md-7
                    h2 #{__('recruitment').leftInner.contract.application.title}
                    p
                      | #{__('recruitment').leftInner.contract.application.content[0]}
                      br
                      a(href="mailto:{#{__('recruitment').leftInner.contract.application.content[1]}}") #{__('recruitment').leftInner.contract.application.content[1]}
                      br
                      | #{__('recruitment').leftInner.contract.application.content[2]}
                  .col-md-5
                    .pricing.hover-effect
                      .pricing-head.contract-employee
                        h3
                          | 契約社員応募
                      .pricing-footer
                        br
