                  li
                    i.fa.fa-check.color-green
                    |  #{__('recruitment').leftInner.free.payAndHoliday.remark[0]}
                  li
                    i.fa.fa-check.color-green
                    |  #{__('recruitment').leftInner.free.payAndHoliday.remark[1]}
                hr
                .row
                  .col-md-7
                    h2 #{__('recruitment').leftInner.free.application.title}
                    p
                      | #{__('recruitment').leftInner.free.application.content[0]}
                      br
                      a(href="mailto:{#{__('recruitment').leftInner.free.application.content[0]}}") #{__('recruitment').leftInner.free.application.content[1]}
                      br
                      | #{__('recruitment').leftInner.free.application.content[2]}
                  .col-md-5
                    .pricing.hover-effect
                      .pricing-head.free-employee
                        h3
                          | #{__('recruitment').leftInner.free.application.download.title}
                      .pricing-footer
                        br
                        button.btn-u.btn-u-purple.pulse-grow(data-toggle='modal', data-target='#')
                          i.fa.fa-cloud-download
                          |  #{__('recruitment').leftInner.free.application.download.button}
        // End Left Inner
        // Right Inner
        .col-md-5
          .right-inner
            #testimonials-3.carousel.slide.testimonials.testimonials-v1
              .headline.margin-bottom-60
                h2.pull-left #{__('recruitment').rightInner.voices.title}
              .carousel-inner
                .item.active
                  p.rounded-2x
                    | #{__('recruitment').rightInner.voices.content1.statement}
                  .testimonial-info
                    img.rounded-2x(src='assets/img/testimonials/img1.jpg', alt='')
                    span.testimonial-author
                      | #{__('recruitment').rightInner.voices.content1.name}
                      em #{__('recruitment').rightInner.voices.content1.description}
                .item
                  p.rounded-2x
                    | #{__('recruitment').rightInner.voices.content2.statement}
                  .testimonial-info
                    img.rounded-2x(src='assets/img/testimonials/img2.jpg', alt='')
                    span.testimonial-author
                      | #{__('recruitment').rightInner.voices.content2.name}
                      em #{__('recruitment').rightInner.voices.content2.description}
