block breadcrumbs
  // === Breadcrumbs ===
  .breadcrumbs
    .container
      h1.pull-left #{__('recruitment').breadcrumb.title}
  // /breadcrumbs
  // === End Breadcrumbs ===

block content
  // === Job Description ===
  .job-description
    .container.content
      .row
        // Left Inner
        .col-md-7
          // Tab v1
          .tab-v1.left-inner
            ul.nav.nav-tabs
              li.regular-employee.active
                a(href='#regular_employee', data-toggle='tab') #{__('recruitment').leftInner.regular.title}
              li.contract-employee
                a(href='#contract_employee', data-toggle='tab') #{__('recruitment').leftInner.contract.title}
              li.free-employee
                a(href='#free_employee', data-toggle='tab') #{__('recruitment').leftInner.free.title}
            .tab-content
              #regular_employee.tab-pane.fade.in.active
                .service-block-v6
                  i.icon-custom.rounded-4x.icon-md.icon-bg-green.fa.fa-lightbulb-o
                  .service-desc
                    h2 #{__('recruitment').leftInner.regular.content}
                    p
                      | #{__('recruitment').leftInner.regular.statement[0]}
                    ol
                      li
                        | #{__('recruitment').leftInner.regular.statement[1]}
                      li
                        | #{__('recruitment').leftInner.regular.statement[2]}
                      li
                        | #{__('recruitment').leftInner.regular.statement[3]}
                      li
                        | #{__('recruitment').leftInner.regular.statement[4]}
                    p
                      | #{__('recruitment').leftInner.regular.statement[5]}
                hr
                h2 #{__('recruitment').leftInner.regular.job.title}
                ol
                  li
                    | #{__('recruitment').leftInner.regular.job.content1}
                    ul.list-unstyled
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark1[0]}
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark1[1]}
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark1[2]}
                  li
                    | #{__('recruitment').leftInner.regular.job.content2}
                    ul.list-unstyled
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark2[0]}
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark2[1]}
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark2[2]}
                  li
                    | #{__('recruitment').leftInner.regular.job.content3}
                    ul.list-unstyled
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark3[0]}
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark3[1]}
                      li
                        i.fa.fa-check.color-green
                        |  #{__('recruitment').leftInner.regular.job.remark3[2]}
                hr
                h2 #{__('recruitment').leftInner.regular.payAndHoliday.title}
                ul.list-unstyled
                  li
                    i.fa.fa-check.color-green
                    |  #{__('recruitment').leftInner.regular.payAndHoliday.remark[0]}
                  li
                    i.fa.fa-check.color-green
                    |  #{__('recruitment').leftInner.regular.payAndHoliday.remark[1]}
                  li
                    i.fa.fa-check.color-green
                    |  #{__('recruitment').leftInner.regular.payAndHoliday.remark[2]}
                hr
                .row
                  .col-md-7
                    h2 #{__('recruitment').leftInner.regular.application.title}
                    p
                      | #{__('recruitment').leftInner.regular.application.content[0]}
                      br
                      a(href="mailto:{#{__('recruitment').leftInner.regular.application.content[1]}}") #{__('recruitment').leftInner.regular.application.content[1]}
                      br
                      | #{__('recruitment').leftInner.regular.application.content[2]}
                  .col-md-5
                    .pricing.hover-effect
                      .pricing-head.regular-employee
                        h3
                          | #{__('recruitment').leftInner.regular.application.download.title}
                      .pricing-footer
                        br
                        button.btn-u.btn-u-green.pulse-grow(data-toggle='modal', data-target='#')
                          i.fa.fa-cloud-download
                          |  #{__('recruitment').leftInner.regular.application.download.button}
              #contract_employee.tab-pane.fade.in
                .service-block-v6
                  i.icon-custom.rounded-2x.icon-lg.icon-bg-orange.fa.fa-bullhorn
                  .service-desc
                    h2 #{__('recruitment').leftInner.contract.content}
                    p
                      | #{__('recruitment').leftInner.contract.statement[0]}
                      br
                      | #{__('recruitment').leftInner.contract.statement[1]}
                      br
                      | #{__('recruitment').leftInner.contract.statement[2]}
                      br
                      | #{__('recruitment').leftInner.contract.statement[3]}
                hr
