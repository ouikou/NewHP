                  a(href='#')
                    em.overflow-hidden
                      img#owl-carousel.img-responsive(src='assets/img/main/img4.jpg', alt='')
                    span
                      strong #{__('recruitment').rightInner.news.item4.title}
                      i #{__('recruitment').rightInner.news.item4.content}
