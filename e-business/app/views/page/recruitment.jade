                      | #{__('recruitment').rightInner.voices.content3.name}
                      em #{__('recruitment').rightInner.voices.content3.description}
              .carousel-arrow
                a.left.carousel-control(href='#testimonials-3', data-slide='prev')
                  i.fa.fa-angle-left.rounded
                a.right.carousel-control(href='#testimonials-3', data-slide='next')
                  i.fa.fa-angle-right.rounded
            hr
            .owl-carousel-v1.owl-work-v1.margin-bottom-40
              .headline
                h2.pull-left #{__('recruitment').rightInner.news.title}
                .owl-navigation
                  .customNavigation
                    a.owl-btn.prev-v2
                      i.fa.fa-angle-left
                    a.owl-btn.next-v2
                      i.fa.fa-angle-right

                // /navigation
              .owl-recent-works-v1
                .item
                  a(href='#')
                    em.overflow-hidden
                      img#owl-carousel.img-responsive(src='assets/img/main/img1.jpg', alt='')
                    span
                      strong #{__('recruitment').rightInner.news.item1.title}
                      i #{__('recruitment').rightInner.news.item1.content}
