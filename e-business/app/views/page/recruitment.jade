                      li
                        i.fa.fa-check.color-green
                        | #{__('recruitment').leftInner.contract.project.remark3}
                hr
                h2 #{__('recruitment').leftInner.contract.payAndHoliday.title}
                ul.list-unstyled
                  li
                    i.fa.fa-check.color-green
                    | #{__('recruitment').leftInner.contract.payAndHoliday.remark[0]}
                  li
                    i.fa.fa-check.color-green
                    | #{__('recruitment').leftInner.contract.payAndHoliday.remark[1]}
